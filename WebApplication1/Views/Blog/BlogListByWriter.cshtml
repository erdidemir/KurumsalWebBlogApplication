@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Ürünler</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@item.BlogCreateDate.ToShortDateString()</td>
            <td>@item.Category.CategoryName</td>
            <td>@if (item.BlogStatus) { 
                <p class="badge badge-gradient-primary">Aktif</p>
                }
                else
                {
                    <p class="badge badge-gradient-secondary">Pasif</p>
                }                      
            </td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Blog/BlogAdd/" class="btn btn-gradient-primary">Yeni Ürün Oluştur</a>

